@model List<Cinema>
@{
    ViewData["Title"] = "The Cinemas List";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th> Cinema Logo </th>
                    <th> Name</th>
                    <th> Description</th>
                    <th> Actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="/Images/Producers/@item.Logo" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            <h2>@item.Name</h2>
                        </td>
                        <td class="align-middle">@item.Description</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>

                        </td>
                    </tr>



                }

            </tbody>
        </table>

    </div>

</div>
<div>
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success">NewCinema</a>
</div>

